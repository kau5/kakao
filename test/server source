#include<string.h>
#include<unistd.h>
#include<arpa/inet.h>
#include<sys/types.h>
#include<sys/socket.h>
#include<pthread.h>
#define PORT 5500
#define BUFFERSIZE 100
#define NAMESIZE 30
pthread_t thread;
pthread_mutex_t mutex;
int clientNumber=0;
int allClientSocket[100];

int main()
{
if(pthread_mutex_init(&mutex,NULL)!=0){
printf("뮤¹A텍AØ스½º를¸| 생≫y성¼º하CI는´A데μ￥ 실½C패ÆÐ했Cß습½A니´I다´U.\n");
